{% extends 'base.html.twig' %}

{% block title %}Connectez-vous!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Identifiez-vous</h1>
        </br><label for="username">Username</label></br>
        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-contro w-25" autocomplete="username" required autofocus>
        </br><label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control w-25" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-lg btn-dark" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}
